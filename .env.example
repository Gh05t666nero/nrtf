# API Gateway Configuration
SECRET_KEY=supersecretkey_replace_in_production
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Service URLs
# These are set in docker-compose.yml for container communication
# Uncomment and modify if you're running services independently
# ORCHESTRATOR_URL=http://localhost:8000
# HTTP_MODULE_URL=http://localhost:8001
# TCP_MODULE_URL=http://localhost:8002
# DNS_MODULE_URL=http://localhost:8003
# PROXY_SERVICE_URL=http://localhost:8010

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
MAX_CONCURRENT_TESTS=5

# Default Test Limits
MAX_TEST_DURATION=300  # seconds
MAX_THREADS=1000